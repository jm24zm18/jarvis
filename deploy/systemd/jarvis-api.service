[Unit]
Description=Jarvis API
After=network.target

[Service]
Type=simple
WorkingDirectory=/srv/agent-framework
EnvironmentFile=/etc/jarvis/jarvis.env
ExecStart=/usr/bin/env uv run uvicorn jarvis.main:app --host 0.0.0.0 --port 8000 --app-dir src
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
