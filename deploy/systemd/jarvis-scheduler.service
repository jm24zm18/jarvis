[Unit]
Description=Jarvis Scheduler Tick
After=network.target

[Service]
Type=simple
WorkingDirectory=/srv/agent-framework
EnvironmentFile=/etc/jarvis/jarvis.env
ExecStart=/bin/bash -lc 'while true; do uv run python -c "from jarvis.tasks.scheduler import scheduler_tick; scheduler_tick()"; sleep 30; done'
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
